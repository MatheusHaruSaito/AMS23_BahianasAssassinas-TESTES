@model IEnumerable<CategoryModel>
  
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <div class="d-grid grid-gap-2">
        <a class="btn btn-primary" asp-controller="Category" asp-action="Add">Adicionar Categoria</a>
    </div>
    <br>

    <div id="BackColor">
    <forms>
         </forms>
<table class="table table-bordered border-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Ativo?</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
 @if(Model != null && Model.Any()){

        foreach(var category in Model)
        {
          <tr>
            <th scope="row">@category.Id</th>
            <td>@category.Name</td>
            <td>@category.Description</td>
            @if(category.IsActive == true)
              {
                <td>sim</td>
              }
              else
              {
                <td>não</td>
              }
            <td>
                <a class="btn btn-primary btn-sm" asp-route-Id="@category.Id" asp-action="Edit" asp-controller="Category">Editar</a>
                <a class="btn btn-danger btn-sm" asp-route-Id="@category.Id" asp-action="Delete" asp-controller="Category">Excluir</a>
            </td>
          </tr>
        }
    }
  </tbody>
</table>
</div>
<partial name="_carousel"/>
</div>